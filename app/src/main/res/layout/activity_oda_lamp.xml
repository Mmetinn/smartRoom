<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".odaLampActivity"
    android:orientation="vertical"
    android:background="@drawable/mainbg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imageGG"
            android:layout_width="410dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteX="-4dp"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tarih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontFamily="@font/aclonica" />

            <TextView
                android:id="@+id/gun"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontFamily="@font/aclonica" />

            <TextView
                android:id="@+id/saat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontFamily="@font/aclonica" />

            <TextView
                android:id="@+id/isik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:fontFamily="@font/aclonica" />
            <TextView
                android:id="@+id/isikdesk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:fontFamily="@font/aclonica" />
        </LinearLayout>
    </RelativeLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="135dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_lamp_off"
            android:onClick="ackapaClicked"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="230dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/toggleButtondesk"
            android:layout_width="wrap_content"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_lamp_desk_off"
            android:onClick="ackapadeskClicked"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="230dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>